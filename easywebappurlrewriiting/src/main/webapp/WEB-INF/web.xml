<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>InboxServlet</servlet-name>
  	<display-name>InboxServlet</display-name>
  	<description></description>
  	<servlet-class>com.easywebapp.controller.InboxServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SentServlet</servlet-name>
  	<display-name>SentServlet</display-name>
  	<description></description>
  	<servlet-class>com.easywebapp.controller.SentServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DraftServlet</servlet-name>
  	<display-name>DraftServlet</display-name>
  	<description></description>
  	<servlet-class>com.easywebapp.controller.DraftServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.easywebapp.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>InboxServlet</servlet-name>
  	<url-pattern>/inbox</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SentServlet</servlet-name>
  	<url-pattern>/sent</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DraftServlet</servlet-name>
  	<url-pattern>/draft</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>
